<Application x:Class="Anno1800Planner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Anno1800Planner"
             xmlns:vm="clr-namespace:Anno1800Planner.ViewModels"
             xmlns:views="clr-namespace:Anno1800Planner.Views"
             xmlns:common="clr-namespace:Anno1800Planner.Common"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order matters here. Define styles before they are used. -->
                <ResourceDictionary Source="/Styles/_Styles.xaml"/>
                <ResourceDictionary Source="/Styles/_DataTemplates.xaml"/>
                <ResourceDictionary Source="/Styles/_ResidentTierTemplates.xaml"/>
                <ResourceDictionary Source="/Styles/_ProductionChainViewTemplates.xaml"/>
                <ResourceDictionary Source="/Styles/_ViewMappings.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
