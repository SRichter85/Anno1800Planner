<UserControl x:Class="Anno1800Planner.Views.ProductionChainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anno1800Planner.Views"
             xmlns:controls="clr-namespace:Anno1800Planner.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <CollectionViewSource x:Key="AllBuildingsView"
                          Source="{Binding AllBuildings}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Tier.Name"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Button Content="← Back" HorizontalAlignment="Left" Margin="0,0,0,10"/>
            <controls:EditableTextBlock Text="{Binding Name, Mode=TwoWay}" FontSize="20" FontWeight="Bold" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <!-- Left: All Buildings -->
                    <ColumnDefinition Width="5*" />
                    <!-- Right: Production Chain contents -->
                </Grid.ColumnDefinitions>

                <!-- Left: Already done (list of all buildings) -->
                <ListBox Grid.Column="0"
         ItemsSource="{Binding Source={StaticResource AllBuildingsView}}"
         SelectedItem="{Binding SelectedBuilding, Mode=TwoWay}"
         MouseDoubleClick="AllBuildingsList_MouseDoubleClick">
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" Margin="4"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Padding="4"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- RIGHT PANEL -->

                <Grid Grid.Column="1" Margin="12,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Info panel -->
                    </Grid.RowDefinitions>

                    <ListBox Grid.Column="1"
         ItemsSource="{Binding Buildings}"
         Margin="12,0,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4" VerticalAlignment="Center">
                                    <!-- Building name -->
                                    <TextBlock Text="{Binding Item.Name}"
                           Width="180"
                           VerticalAlignment="Center"/>

                                    <!-- 'x' label -->
                                    <TextBlock Text="x"
                           Margin="4,0"
                           VerticalAlignment="Center"/>

                                    <!-- Count textbox -->
                                    <TextBox Text="{Binding Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="40"
                         HorizontalContentAlignment="Right"
                         VerticalAlignment="Center"/>

                                    <!-- Delete button -->
                                    <Button Content="🗑️"
                        Width="28"
                        Height="28"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        ToolTip="Remove building from chain"
                        Command="{Binding DataContext.RemoveBuildingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Info Panel -->
                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <!-- Maintenance -->
                        <TextBlock Text="{Binding TotalMaintenance, StringFormat=Total Maintenance: {0}₴}" FontWeight="Bold" Margin="0,0,0,6"/>

                        <!-- Workforce -->
                        <ItemsControl ItemsSource="{Binding TotalWorkforce}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Tier.Name}"/>
                                        <Run Text=": "/>
                                        <Run Text="{Binding Amount}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Resource Deltas -->
                        <ItemsControl ItemsSource="{Binding ResourceDeltas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Resource.Name}"/>
                                        <Run Text=": "/>
                                        <Run Text="{Binding Delta, StringFormat={}{0:0.##}}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
