<UserControl x:Class="Anno1800Planner.Views.ProductionChainConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <CollectionViewSource x:Key="GroupedBuildings"
                          Source="{Binding Buildings}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Item.Tier.Name"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>

        <!-- Left: List of Chains -->
        <StackPanel Grid.Column="0" >
            <TextBlock Text="Production Chains" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <Button Content="+ Add Chain" Click="AddChain_Click" Margin="0 0 0 5"/>
            <Button Content="− Delete Chain" Click="DeleteChain_Click" Margin="0 5 0 0"/>
            <Button Content="x Edit Chain" Click="EditChain_Click" Margin="0 5 0 0"/>
            <ListBox Grid.Column="0"
                ItemsSource="{Binding ProductionChains}"
                SelectedItem="{Binding SelectedChain, Mode=TwoWay}"
                DisplayMemberPath="Name">
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
